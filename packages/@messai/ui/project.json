{
  "name": "@messai/ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/@messai/ui/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/@messai/ui",
        "main": "packages/@messai/ui/src/index.ts",
        "tsConfig": "packages/@messai/ui/tsconfig.json",
        "format": ["esm", "cjs"],
        "bundle": true,
        "external": [
          "react",
          "react-dom",
          "@react-three/fiber",
          "@react-three/drei",
          "three",
          "clsx",
          "tailwind-merge"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/@messai/ui/**/*.{ts,tsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/@messai/ui/jest.config.ts"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p packages/@messai/ui/tsconfig.json"
      }
    }
  }
}