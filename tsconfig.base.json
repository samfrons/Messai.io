{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@messai/core": ["packages/@messai/core/src/index.ts"],
      "@messai/core/*": ["packages/@messai/core/src/*"],
      "@messai/ui": ["packages/@messai/ui/src/index.ts"],
      "@messai/ui/*": ["packages/@messai/ui/src/*"],
      "@messai/database": ["packages/@messai/database/src/index.ts"],
      "@messai/database/*": ["packages/@messai/database/src/*"],
      "@/*": ["apps/web/src/*"]
    }
  },
  "exclude": ["node_modules", "**/dist", "**/build", "**/.next", ".nx/cache"]
}
