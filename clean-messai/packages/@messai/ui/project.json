{
  "name": "@messai/ui",
  "root": "packages/@messai/ui",
  "sourceRoot": "packages/@messai/ui/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist/**"],
      "options": {
        "command": "tsup",
        "cwd": "packages/@messai/ui"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/@messai/ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "packages/@messai/ui"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/@messai/ui"
      }
    }
  },
  "tags": ["scope:shared", "type:lib"]
}