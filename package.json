{
  "name": "messai",
  "version": "1.0.0",
  "description": "Microbial Electrochemical Systems AI Platform - Clean Architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev --parallel",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --run --coverage --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "nx run-many -t clean",
    "db:generate": "nx run-many -t db:generate",
    "db:push": "nx run-many -t db:push",
    "db:studio": "nx run-many -t db:studio",
    "type-check": "nx run-many -t type-check",
    "graph": "NX_GRAPH_PORT=4213 nx graph",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "@playwright/test": "^1.40.0",
    "@nx/eslint": "^21.2.3",
    "@nx/eslint-plugin": "^21.2.3",
    "@nx/js": "21.2.3",
    "@nx/next": "^21.2.3",
    "@nx/react": "21.2.3",
    "@nx/vite": "21.2.3",
    "@nx/web": "21.2.3",
    "@nx/workspace": "^21.2.3",
    "@prisma/client": "^6.11.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@turbo/gen": "^1.12.4",
    "@types/node": "^20.0.0",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "eslint": "^8.56.0",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.2.3",
    "prettier": "^2.6.2",
    "prisma": "^6.11.1",
    "tslib": "^2.3.0",
    "turbo": "^1.12.4",
    "typescript": "~5.8.2",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
